@model Entity.UserInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <section id="loginForm">
        <h2>使用本地帐户登录。</h2>
        <form method="post">
            @AntiForgery.GetHtml()
            @* 如果存在一个或多个验证错误，则显示以下错误    excludeFieldErrors: true*@
            @Html.ValidationSummary(true, "登录失败。请更正错误并重试.")

            <fieldset>
                <legend>登录你的帐户</legend>
                <ol>
                    <li class="email">

                        @* 将任何用户名验证错误写入此页 *@
                        @Html.ValidationMessage("用户名错误")
                    </li>
                    <li class="password">

                        @* 将任何密码验证错误写入此页 *@
                        @Html.ValidationMessage("密码错误")
                    </li>
                    <li class="remember-me">
                        <input type="checkbox" id="rememberMe" name="rememberMe" value="true" checked="@false" />
                        <label class="checkbox" for="rememberMe">记住我?</label>
                    </li>
                </ol>
                <input type="submit" value="登录" />
            </fieldset>
        </form>
        <p>
            <a href="~/Account/Register">没有帐户?</a>
            <a href="~/Account/ForgotPassword">忘记了密码?</a>
        </p>
    </section>

    <section class="social" id="socialLoginForm">
        <h2>使用其他服务登录.</h2>
        @*@RenderPage("/Admin/Account/Login")*@
    </section>
</body>
</html>
